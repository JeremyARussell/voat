@using Voat.Models;
@using Voat.Domain.Models;

@model Voat.Domain.Models.VoteAggregate

<div id="container">
    @*
        display 1 submission with details and comments
    *@

    @await Component.InvokeAsync("Sidebar",
        new
        {
            domainReference = new Voat.Domain.Models.DomainReference(DomainType.Subverse, Model.Vote.Subverse),
            contentReference = new ContentReference() { Type = ContentType.Vote, ID = Model.Vote.SubmissionID }
        })

    <div class="content" role="main">

        @Html.Partial("~/Views/Welcome/_FirstTimeVisitorWelcome.cshtml")

        @Html.Partial("_VoteDetail.cshtml", Model)

        @*@Html.Partial("_AddComment", new Voat.Data.Models.Comment() { SubmissionID = submission.ID })*@

        <div class="horizontal-line"></div>

        @*@Html.Partial("~/Views/Shared/Comments/_CommentTree.cshtml", Model, ViewData)*@

    </div>
</div>
