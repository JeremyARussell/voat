
@model ContributionRestriction

<div class="form-group">
    <label class="col-md-2 control-label" asp-for="MinimumCount"></label>
    <div class="col-md-1">
        <input asp-for="MinimumCount" class="form-control" type="number" data-voat-field="Restrictions">
        <span asp-validation-for="MinimumCount"></span>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" asp-for="MaximumCount"></label>
    <div class="col-md-1">
        <input asp-for="MaximumCount" class="form-control" type="number" data-voat-field="Restrictions">
        <span asp-validation-for="MaximumCount"></span>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" asp-for="ContentType"></label>
    <div class="col-md-2">
        <select asp-for="ContentType" asp-items="Enum.GetNames(typeof(Voat.Voting.Restrictions.ContentTypeRestriction)).Select(x =>
                new SelectListItem() {
                    Text = x,
                    Value = x
                })" class="form-control" data-voat-field="Restrictions"></select>
        <span asp-validation-for="ContentType"></span>
    </div>
</div>

@Html.Partial("_EditBaseRestriction", Model)

