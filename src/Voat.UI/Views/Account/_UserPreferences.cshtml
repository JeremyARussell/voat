@model Voat.Domain.Models.UserPreference

@using (Html.BeginForm("UserPreferences", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.DisableCSS, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.DisableCSS, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NightMode, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.NightMode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EnableAdultContent, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.EnableAdultContent, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DisplaySubscriptions, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.DisplaySubscriptions, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UseSubscriptionsMenu, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.UseSubscriptionsMenu, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BlockAnonymized, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.BlockAnonymized, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CommentSort, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            <select asp-for="CommentSort" asp-items="Html.GetEnumSelectList(typeof(Voat.Domain.Models.CommentSortAlgorithm))" class="form-control"></select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DisplayThumbnails, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.CheckBoxFor(m => m.DisplayThumbnails, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-3">
            <input type="submit" value="Save" class="btn-whoaverse" />
        </div>
    </div>
}

